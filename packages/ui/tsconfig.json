{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "jsx": "preserve",
    "module": "ESNext",
    "types": ["react", "react-dom", "node"],
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src", "src/index.ts", "src/Sidebar.tsx"]
}
