{
  "compilerOptions": {
    "rootDir": "../..",
    "outDir": "dist",
    "declaration": true,
    "jsx": "preserve",
    "module": "ESNext",
    "types": ["react", "react-dom", "node"],
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],  
    "paths": {
      "@repo/types": ["../types"]
    },
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*", "src/index.ts"]
}